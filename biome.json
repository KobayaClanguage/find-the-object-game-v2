{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "useNamingConvention": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["className"],
            "functions": ["cn"]
          }
        }
      }
    }
  },
  "files": {
    "experimentalScannerIgnores": [
      "node_modules",
      "public/**",
      ".next/**",
      "dist/**",
      "src/components/ui"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "overrides": [
    {
      "includes": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "linter": {
        "rules": {
          "security": {
            "noDangerouslySetInnerHtml": "warn"
          },
          "nursery": {
            "useSortedClasses": {
              "level": "error",
              "fix": "safe",
              "options": {
                "attributes": ["className"],
                "functions": ["cn"]
              }
            }
          }
        }
      }
    }
  ]
}
